{{!< layout}}
<body>
  <div class="formBox">
    <h2>Complete form for game suggestion</h2>
    <form id="gameSeachForm">
      <label for="title">Title:</label>
      <div class="input-field col s12">
        <select>
        <option value="" disabled selected>Choose your option</option>
        <option value="1">Option 1</option>
        <option value="2">Option 2</option>
        <option value="3">Option 3</option>
        </select>
        <label>Materialize Select</label>
      </div>

      <label for="age">Age:</label>
      <div class="input-field col s12">
        <select>
        <option value="" disabled selected>Choose your option</option>
        <option value="1">Option 1</option>
        <option value="2">Option 2</option>
        <option value="3">Option 3</option>
        </select>
        <label>Materialize Select</label>
      </div>

      <label for="players">Players:</label>
      <div class="input-field col s12">
        <select>
        <option value="" disabled selected>Choose your option</option>
        <option value="1">Option 1</option>
        <option value="2">Option 2</option>
        <option value="3">Option 3</option>
        </select>
        <label>Materialize Select</label>
      </div>

      <label for="categories">Categories:</label>
        <div class="input-field col s12">
          <select multiple id="categories" name="categories">
          {{#each categories}}
          <option value="" disabled selected>Choose your option</option>
          <option value="1">Option 1</option>
          <option value="2">Option 2</option>
          <option value="3">Option 3</option>
          {{/each}}
          </select>
          <label>Materialize Multiple Select</label>
        </div>

      <label for="duration">Game Duration:</label>
        <div class="input-field col s12">
        <select>
        <option value="" disabled selected>Choose your option</option>
        <option value="1">Option 1</option>
        <option value="2">Option 2</option>
        <option value="3">Option 3</option>
        </select>
        <label>Materialize Select</label>
        </div>

      <button type="submit">Game Search</button>
    </form>
  </div>

  <section class="container">
    {{#each games}}
    <section class="card">
      <a href="/title/{{id}}">
        <header>{{title}}</header>
        <div class="card-body">
          <img src="/images/{{gamename}}" alt="{{description}}">
        </div>
      </a>
    </section>
    {{/each}}
  </section>

