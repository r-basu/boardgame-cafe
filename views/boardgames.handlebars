    {{#each games}}
    <section class="card">
      <a href="/title/{{id}}">
        <header>{{title}}</header>
        <div class="card-body">
          <img src="/images/{{gamename}}" alt="{{description}}">
        </div>
      </a>
    </section>
    {{/each}}
  </section>

  <section class="container">
    {{#each games}}
