{{!< layout}}
{{body}}

<div class="formBox">
<h2>Complete form for game suggestion</h2>
    <form id="gameSeachForm">
      <label for="title">Title:</label>
      <div class="input-field col s12">
        <select>
          <option value="" disabled selected>Choose your option</option>
          <option value="1">Option 1</option>
          <option value="2">Option 2</option>
          <option value="3">Option 3</option>
        </select>
        <label>Materialize Select</label>
      </div>

      <label for="age">Age:</label>
      <input type="text" id="age" name="age" placeholder="Enter age">

      <label for="players">Players:</label>
      <input type="text" id="players" name="players" placeholder="Enter number of players">

    <label for="categories">Categories:</label>
      <select id="categories" name="categories">
      {{#each categories}}
      <option value="{{this}}">{{this}}</option>
      {{/each}}
      </select>
    <input type="text" id="categories" name="categories" placeholder="Enter categories">

      <label for="duration">Game Duration:</label>
      <input type="text" id="duration" name="duration" placeholder="Enter game duration">

      <button type="submit">Game Search</button>
    </form>
  </div>

<section class="container">
  {{#each games}}
  <section class="card">
    <a href="/title/{{id}}">
      <header>{{title}}</header>
      <div class="card-body">
        <img src="/images/{{gamename}}" alt="{{description}}">
      </div>
    </a>
  </section>
  {{/each}}
</section>

