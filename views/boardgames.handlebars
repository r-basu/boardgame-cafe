      <a href="/title/{{id}}">
        <header>{{title}}</header>
        <div class="card-body">
          <img src="/images/{{gamename}}" alt="{{description}}">
        </div>
      </a>
    </section>
    {{/each}}
  </section>
  <script src="/js/boardgames.js"></script>
</body>
